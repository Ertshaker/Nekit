<Window x:Class="Nekit.FileSort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nekit"
        mc:Ignorable="d"
        Title="FileSort" Height="175" Width="300">
    <Grid>
        <TextBox x:Name="DirectoryTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="25" FontSize="14" IsEnabled="False"/>
        <Label Content="Путь:" HorizontalAlignment="Center"  VerticalAlignment="Top" FontWeight="Bold" Margin="20"/>
        <Button Content="..." HorizontalAlignment="Right"  VerticalAlignment="Center" Width="25" Height="25" Margin="10" Background="White" Click="GetFolder_Click" FontSize="16"/>
        <Button Content="Сортировать" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="25" Margin="20" Background="White" Click="Sort_Files" FontSize="14"/>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="30" Margin="5" Background="Black" IsEnabled="False">
            <Button.OpacityMask>
                <ImageBrush ImageSource="/Pictures/settings_icon.png" Stretch="Uniform"/>
            </Button.OpacityMask>
        </Button>

    </Grid>
</Window>
